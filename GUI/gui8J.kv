<LoginScreen>:
    name: "login_screen"
   # canvas.before:
    #    Rectangle:
     #       pos: self.pos
      #      size: self.size
       #     source: 'tech1.jpg'
    Label:
        #text: 'Team 2b|!2b'
        font_size: 50
        pos_hint: {"center_x": 0.5, "center_y": 0.8}
        markup: True 
        text:'[b][color=008000]Team 2b|!2b[/color][/b]'
        
    GridLayout:
        size_hint: (0.6, 0.3)
        pos_hint: {"center_x": 0.5, "center_y": 0.6}
        cols: 2
        padding: 15

        Label:
            size_hint: (0.9, 0.1)
            text: "Username:"
            font_size: 30
            text_size: self.size
            valign: "middle"

        TextInput:
            id: user_name
            size_hint: (1.3, 0.1)
            cursor_blink: True
            font_size: 30
            multiline: False
            spacing: [5,5]
            
        Label:
            size_hint: (0.9, 0.1)
            text:"Password:"
            font_size: 30
            text_size: self.size
            valign: "middle"

        TextInput:
            id: passw
            size_hint: (1.3, 0.1)
            cursor_blink: True
            font_size: 30
            multiline: False
            password: True

    BoxLayout:
        orientation: 'vertical'        
        size_hint: (0.5, 0.2)
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}
        Button:
            height: 90
            text:'Login'
            font_size: 30
            
            on_press: root.manager.ids.main.login(user_name.text, passw.text)
            

<HomePage>:
    name: 'homepage'
    BoxLayout:
        orientation: 'horizontal'
        Label:
            text: "DMX-512 Interface"
            pos_hint:{'center_x': 0.5, 'center_y': 0.9}
    GridLayout:
        cols: 24
        spacing: '8dp'
        size_hint:1 , .2
        pos_hint: {'center_x': 0.6, 'center_y': 0.1}  
        
        Button:
            text: 'Setting'
            font_size: 20
            on_press: root.manager.current = 'setting'
            
        Button:
			text: 'Lights'
			font_size: 20
			on_press: root.manager.current = 'view_lights'

        Button:
            #size_hint:(1,0.1)
            #pos_hint_y: 0.2
            text: 'Logout'
            font_size: 20
            on_press: root.manager.current = 'login_screen'
            
            
