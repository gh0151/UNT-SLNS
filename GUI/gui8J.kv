		size: (800,340)
		scroll_type:['bars', 'content']
		do_scroll_x: False
		bar_pos_y: 'left'
		bar_width: '8dp'
		bar_color: [(39/255.0), (37/255.0), (39/255.0), 1]
		bar_inactive_color: [(39/255.0), (37/255.0), (39/255.0), 1]
		x: 100
		y: 100
		
			
		GridLayout:
			id: gridlayout2
			cols: 1
			padding: 10
			spacing: 10
			size_hint: (None, None)
			width: 800
			
	BoxLayout:
		size_hint: (None,None)
		size: (800,40) #width and height
		x:0
		y:440
		
		Label:
			text: '{}'.format(root.room_name)
			valign: 'center'
			padding_y: 5
			font_size: 30
			
	BoxLayout:
		id: testingbox
		orientation: 'horizontal'
		size_hint: (None,None)
		size: (800, 125)
		x: 0 
		y: 0
		
		Button:
			text: "Remove Light"
			background_color: [0, (218/255.0),(18/255.0),1]
			on_press: root.remove_light_rv()
		
		Button:
			id: health_button
			text: "Health Status"
			on_press: root.manager.current = 'health'
			#RGBA
			background_color: [0, (218/255.0),(18/255.0),1]
		
		Button:
			id: set_button
			text: "Set Values"
			on_press: root.manager.current = 'set_values'
			#RGBA
			background_color: [0, (218/255.0),(18/255.0),1]
		
		Button: 
			text: "Previous"
			on_press: root.manager.current = 'view_lights'
			#clears background back to white
			#background_normal: ''
			#RGBA
			background_color: [0, (218/255.0),(18/255.0),1]
			
		Button:
			text: "Home"
			on_press: root.manager.current = 'homepage'
			background_color: [0, (218/255.0),(18/255.0),1]

			

