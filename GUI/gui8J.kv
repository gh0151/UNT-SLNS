<LightsView>:
	name: 'view_lights'
	on_enter: root.buildlist() #calls for update() inside func
	on_pre_enter: root.update_rooms() #update rooms

	ScrollView:
		size_hint: (None, None)
		size: (380,440)
		scroll_type:['bars', 'content']
		do_scroll_x: False
		bar_pos_y: 'left'
		bar_width: '8dp'
			
		GridLayout:
			id: gridlayout
			cols: 1
			padding: 10
			spacing: 10
			size_hint: (None, None)
			width: 380
			
			canvas:
				Color:
					rgb: (204/255.0), (204/255.0), (204/255.0)
				Rectangle:
					size: self.size
					pos: self.pos
			
	BoxLayout:
		size_hint: (None,None)
		size: (380,40) #width and height
		x:0
		y:440
		
		canvas:
            Color:
                rgb: (39/255.0), (37/255.0), (39/255.0)
            Rectangle:
                size: self.size
                pos: self.pos
		
		Label:
			text: 'Unassigned Lights'
			valign: 'center'
			padding_y: 5
			font_size: 20
			
			
			
	BoxLayout:
		size_hint: (None,None)
		size: (405,40) #width and height
		x:390
		y:440
		
		canvas:
            Color:
                rgb: (39/255.0), (37/255.0), (39/255.0)
            Rectangle:
                size: self.size
                pos: self.pos
		
		Label:
			text: 'Rooms'
			valign: 'center'
			padding_y: 5
			font_size: 20
			
	BoxLayout:
		orientation: 'horizontal'
		size_hint: (None, None)
		size: (405, 60)
		x: 390
		y: 10
		
		canvas:
            Color:
                rgb: (204/255.0), (204/255.0), (204/255.0)
            Rectangle:
                size: self.size
                pos: self.pos
			
		Button: 
			text: 'Remove Light'
			#size_hint:(None,None)
			#size:(140,60)
			background_color: [0, (218/255.0),(18/255.0),1]
			on_press: root.remove_light()
			
		Button:
			text: 'Home'
			#size_hint: (None, None)
			#size: (100,60)
			background_color: [0, (218/255.0),(18/255.0),1]
			on_press: root.manager.current = 'homepage'
	
	BoxLayout:
		id: roomlayout
		orientation: 'vertical'
		size_hint: (None,None)
		size: (405, 230)
		x:390
		y:210
		
		canvas:
            Color:
				rgb: (204/255.0), (204/255.0), (204/255.0)
                
            Rectangle:
                size: self.size
                pos: self.pos

	BoxLayout:
		orientation: 'horizontal'
		size_hint: (None, None)
		size: (405,120)
		x:390
		y:80
		
		canvas:
            Color:
                rgb: (179/255.0), (179/255.0), (179/255.0)
            Rectangle:
                size: self.size
                pos: self.pos
                
		Button:
			text: 'Add Room'
			on_press: root.add_room()
			halign: 'center'
			valign: 'middle'
			background_color: [0, (218/255.0),(18/255.0),1]
			
		
		Button:
			text: 'Remove Room'
			on_press: root.remove_room()
			halign: 'center'
			valign: 'middle'
			background_color: [0, (218/255.0),(18/255.0),1]
			
		Button:
			text: 'View Room'
			on_press: root.manager.current = 'view_room'
			halign: 'center'
			background_color: [0, (218/255.0),(18/255.0),1]
			
